<div class="container">
  <div class="col-6 mx-auto">
    <div class="row">
      <h1>New Restaurant</h1>
      <%= simple_form_for @restaurant do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :phone_number %>
        <%= f.input :category %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
